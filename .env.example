# Korean Together Environment Variables Template
# Copy this file to .env and fill in your secrets
# DO NOT commit .env to git

# =============================================================================
# Environment
# =============================================================================
NODE_ENV=production
LOG_LEVEL=info
VERSION=0.1.0-alpha

# =============================================================================
# Database (PostgreSQL)
# =============================================================================
DB_USER=koto_user
DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE
DB_NAME=koto

# =============================================================================
# Redis
# =============================================================================
# (No password for localhost-only setup)

# =============================================================================
# MinIO Object Storage
# =============================================================================
MINIO_ACCESS_KEY=koto_minio
MINIO_SECRET_KEY=CHANGE_ME_MINIO_SECRET_KEY_HERE
MINIO_BROWSER=on

# =============================================================================
# External AI APIs
# =============================================================================

# Google Cloud (STT/TTS)
# Get credentials from: https://console.cloud.google.com/
GOOGLE_APPLICATION_CREDENTIALS=./secrets/gcp-sa.json

# Gemini API (Evaluation)
# Get API key from: https://aistudio.google.com/
GEMINI_API_KEY=AIzaSy_YOUR_GEMINI_API_KEY_HERE

# =============================================================================
# AI Provider Selection
# =============================================================================
# v0: google only
# v1: google (production) + whisper/vits (testing)
# v2: whisper/vits (primary) + google (fallback)

STT_PROVIDER=google      # google | whisper
TTS_PROVIDER=google      # google | vits
EVAL_PROVIDER=gemini     # gemini (only option for now)

# =============================================================================
# Security
# =============================================================================
JWT_SECRET=CHANGE_ME_JWT_SECRET_AT_LEAST_32_CHARACTERS
SESSION_SECRET=CHANGE_ME_SESSION_SECRET_AT_LEAST_32_CHARACTERS

# CORS Allowed Origins (comma-separated)
CORS_ORIGINS=https://uconcreative.ddns.net,http://localhost:3000

# =============================================================================
# Feature Flags
# =============================================================================
# v0 기준: 텍스트 입력만, GPU 모델 비활성화
ENABLE_VOICE_INPUT=false     # v1에서 true로 변경
ENABLE_GPU_MODELS=false      # v2에서 true로 변경
ENABLE_MONITORING=false      # v2에서 true로 변경

# =============================================================================
# GPU Settings (v2 only)
# =============================================================================
# Whisper
WHISPER_MODEL_SIZE=base      # tiny | base | small | medium
WHISPER_DEVICE=cuda          # cuda | cpu

# VITS
VITS_MODEL_PATH=/app/models/vits_korean.pth
VITS_DEVICE=cuda             # cuda | cpu

# =============================================================================
# Monitoring (v2)
# =============================================================================
# Prometheus
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090

# Grafana
GRAFANA_ENABLED=false
GRAFANA_PORT=3001
GRAFANA_ADMIN_PASSWORD=CHANGE_ME_GRAFANA_PASSWORD

# =============================================================================
# Backup
# =============================================================================
BACKUP_ENABLED=false         # v1에서 true로 변경
BACKUP_RETENTION_DAYS=7
BACKUP_PATH=/data/db/koto-backups

# =============================================================================
# Development Only
# =============================================================================
# 개발 서버에서만 사용
DEV_MODE=false
HOT_RELOAD=false
DEBUG_SQL=false
